@model IKEA.PL.ViewsModels.RoleViewModels.CreateRoleViewModel

@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Role</h1>

    <form class="col-8" method="post" asp-action="Create" asp-controller="Role">
        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter Role Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mt-4 text-center">
            <input class="btn btn-primary" type="submit" value="Create" />
            <a class="btn btn-outline-dark" asp-action="Index">Back to list</a>
        </div>
    </form>
</div>

